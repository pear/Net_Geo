<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<!-- do not use the "Type" attribute here, that one is only for
     generated package.xml files -->
<package version="1.0">
  <name>Net_Geo</name>
  <summary>Geographical locations based on Internet address</summary>
  <description>
    Obtains geogrphical information based on IP number, domain name,
    or AS number. Makes use of CAIDA Net_Geo lookup, HostIP or
    localizer extension.
  </description>
  <license>PHP License</license>
  <maintainers>
    <maintainer>
      <user>ehlersd</user>
      <role>lead</role>
      <name>Darren Ehlers</name>
      <email>darren@ehlersconsulting.net</email>
    </maintainer>
    <maintainer>
      <user>graeme</user>
      <role>lead, inactive</role>
      <name>Graeme Merrall</name>
      <email>graeme@inetix.com.au</email>
    </maintainer>
  </maintainers>

  <release>
    <version>1.0.3</version>
    <state>stable</state>
    <date>2006-03-28</date>
    <license>PHP License</license>
    <notes>Removed the PHP5 dependency, and added the Package "XML_Serializer" dependency.
    </notes>
    <filelist>
      <dir name="/" baseinstalldir="Net">
        <file role="php">Geo.php</file>
        <file role="doc">README</file>
      </dir>
    </filelist>
  </release>

  <changelog>
    <release>
      <version>1.0.3</version>
      <state>stable</state>
      <date>2006-03-28</date>
      <license>PHP License</license>
      <notes>Removed the PHP5 dependency, and added the Package "XML_Serializer" dependency.
      </notes>
      <filelist>
        <dir name="/" baseinstalldir="Net">
          <file role="php">Geo.php</file>
          <file role="doc">README</file>
        </dir>
      </filelist>
    </release>

